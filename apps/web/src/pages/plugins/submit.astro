---
export const prerender = false;

import BaseLayout from "../../layouts/BaseLayout.astro";
import PluginSubmitForm from "../../components/plugins/PluginSubmitForm";
---

<BaseLayout title="提交插件 - PocketBase.cn" description="提交 PocketBase 插件到 PocketBase.cn 插件市场。" noindex={true}>
  <h1 class="text-2xl font-semibold tracking-tight">提交插件</h1>
  <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">
    提交后默认进入 <strong>pending</strong> 审核状态；审核通过后才会在市场中公开展示。
  </p>
  <div class="mt-6 max-w-3xl">
    <PluginSubmitForm client:load />
  </div>
</BaseLayout>
